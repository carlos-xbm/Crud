@model List<ContatoModel>


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Registro de Contatos</h1>
        <a asp-action="Cadastrar" asp-controller="Contatos" class="btn btn-success">Cadastrar Contato</a>
    </div>
    <table class="table table-hover table-bordered mt-5" id="myTable">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Email</th>
                <th>Cargo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var contato in Model)
                {
                    <tr>
                        <td>@contato.Id</td>
                        <td>@contato.Nome</td>
                        <td>@contato.Sobrenome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Cargo</td>
                        <td class="text-center">
                            <a asp-action="Editar" asp-controller="Contatos" asp-route-id="@contato.Id" class="btn btn-info">Editar</a>
                            <a asp-action="Remover" asp-controller="Contatos" asp-route-id="@contato.Id" class="btn btn-danger">Remover</a>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>

</div>