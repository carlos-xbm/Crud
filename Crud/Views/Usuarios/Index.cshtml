@model List<UsuarioModel>


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Registro de usuários</h1>
        <a asp-action="Cadastrar" asp-controller="Usuarios" class="btn btn-success">Cadastrar Usuário</a>
    </div>
    <table class="table table-hover table-bordered mt-5" id="myTable">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Login de Usuário</th>
                <th>Email</th>
                <th>Data de Cadastro</th>
                <th>Data de Atualizacao</th>
                <th>Perfil</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Nome</td>
                        <td>@usuario.LoginUsuario</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.DataCadastro</td>
                        <td>@usuario.DataAtualizacao</td>
                        <td>@usuario.Perfil</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Usuarios" asp-route-id="@usuario.Id" class="btn btn-info">Editar</a>
                            <a asp-action="Remover" asp-controller="Usuarios" asp-route-id="@usuario.Id" class="btn btn-danger">Remover</a>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>

</div>