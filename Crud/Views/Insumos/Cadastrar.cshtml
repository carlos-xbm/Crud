@model InsumoModel

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}
<div asp-validation-summary="All" class="text-danger"></div>

<div>
    <h1>Registro de insumo </h1>
    <form asp-action="Cadastrar" asp-controller="Insumos" method="post">
        <div class="mt-3">
            <label class="form-label">Nome:</label>
            <input type="text" class="form-control" asp-for="Nome" />
        </div>
        <div class="mt-3">
            <label class="form-label">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="Fornecedor" />
        </div>
        <div class="mt-3">
            <label class="form-label">NF:</label>
            <input type="text" class="form-control" asp-for="NF" />
        </div>
        <div class="mt-3">
            <label class="form-label">Lote:</label>
            <input type="text" class="form-control" asp-for="Lote" />
        </div>
        <div class="mt-3">
            <label class="form-label">Quantidade:</label>
            <input type="number" class="form-control" asp-for="Quantidade" />
        </div>
        <div class="mt-3">
            <label class="form-label">Fabricação:</label>
            <input type="date" class="form-control" asp-for="Fabricacao" />
        </div>
        <div class="mt-3">
            <label class="form-label">Vencimento:</label>
            <input type="date" class="form-control" asp-for="Vencimento" />
        </div>
        <div class="mt-3">
            <label class="form-label">Entrada:</label>
            <input type="date" class="form-control" asp-for="Entrada" />
        </div>
        <div class="d-flex mt-5 g-2">
            <button type="submit" class="btn btn-success w-50 mx-2">Cadastrar</button>
            <a asp-action="Index" class="btn btn-info w-50">Voltar</a>
        </div>
    </form>
</div>